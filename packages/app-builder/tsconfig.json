{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2020",
    "lib": ["ES2021"],

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["./src", "src/types"],
  "exclude": ["./src/templates"]
}
